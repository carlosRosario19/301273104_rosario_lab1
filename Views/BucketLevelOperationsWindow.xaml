<Window x:Class="_301273104_rosario_lab1.Views.BucketLevelOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301273104_rosario_lab1.Views"
        xmlns:viewModel="clr-namespace:_301273104_rosario_lab1.ViewModels"
        mc:Ignorable="d"
        Title="Bucket Level Operations" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" MaxWidth="1000" Margin="20">
        <!-- Define main layout: Header, Body, Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Body -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0 0 0 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- First row -->
                <RowDefinition Height="Auto"/>
                <!-- Second row -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Label -->
            <Label Content="Bucket Name:" 
                   Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Right"
                   Margin="5"/>

            <!-- TextBox -->
            <TextBox x:Name="BucketNameTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Margin="5"
                     Width="300"
                     Text="{Binding BucketName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

            <!-- Create Bucket Button -->
            <Button Content="Create Bucket"
                    Grid.Row="0" Grid.Column="2"
                    Margin="5"
                    Width="120"
                    IsEnabled="{Binding CanCreateBucket}"
                    Command="{Binding CreateBucketCommand}"/>

            <!-- Delete Bucket Button -->
            <Button Content="Delete Bucket"
                    Grid.Row="1" Grid.Column="2"
                    Margin="5"
                    Width="120"
                    IsEnabled="{Binding CanDeleteBucket}"
                    Command="{Binding DeleteBucketCommand}"/>
        </Grid>

        <!-- BODY -->
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0 0 0 20"
                  ItemsSource="{Binding BucketsView}"
                  SelectedItem="{Binding SelectedBucket, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bucket Name" 
                                    Binding="{Binding BucketName}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Creation Date" 
                                    Binding="{Binding CreationDate, StringFormat=G}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button Content="Back to Main Window" 
                    Width="180" 
                    Height="40"
                    Command="{Binding BackToMainWindowCommand}"/>
        </StackPanel>

    </Grid>
</Window>
