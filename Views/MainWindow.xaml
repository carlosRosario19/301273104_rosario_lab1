<Window x:Class="_301273104_rosario_lab1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301273104_rosario_lab1"
        xmlns:viewModel="clr-namespace:_301273104_rosario_lab1.ViewModels"
        mc:Ignorable="d"
        Title="Lab #1" Height="450" Width="800">
    <Grid>
        <!-- Define 3 equal columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Buttons placed in each column -->
        <Button Content="Bucket Level Operations"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" 
                Height="60"
                Width="160"
                Command="{Binding OpenBucketLevelOperationsCommand}"/>

        <Button Grid.Column="1" Content="Object Level Operations" 
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="60"
                Width="160"
                Command="{Binding OpenObjectLevelOperationsCommand}"/>

        <Button Grid.Column="2" Content="Exit" 
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="60"
                Width="160"
                Command="{Binding ExitCommand}"/>
        <Grid/>
    </Grid>
</Window>
