<Window x:Class="_301273104_rosario_lab1.Views.ObjectLevelOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_301273104_rosario_lab1.Views"
        xmlns:viewModel="clr-namespace:_301273104_rosario_lab1.ViewModels"
        mc:Ignorable="d"
        Title="Object Level Operations" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" MaxWidth="1000" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Body -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0 0 0 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- First row -->
                <RowDefinition Height="Auto"/>
                <!-- Second row -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Label Content="Bucket:" 
                   Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="5"/>

            <ComboBox x:Name="BucketDropDown"
                      Grid.Row="0" Grid.Column="1"
                      Margin="5"
                      Width="300"
                      ItemsSource="{Binding BucketsView}"
                      DisplayMemberPath="BucketName"
                      SelectedItem="{Binding SelectedBucket, Mode=TwoWay}"/>

            <!-- Row 1 -->
            <Label Content="Object:" 
                   Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="5"/>

            <TextBox x:Name="ObjectNameTextBox"
                     Grid.Row="1" Grid.Column="1"
                     Margin="5"
                     Width="300"/>

            <Button Content="Browse"
                    Grid.Row="1" Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Width="100"/>
        </Grid>

        <!-- BODY -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <!-- DataGrid -->
                <ColumnDefinition Width="1*"/>
                <!-- Buttons -->
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid Grid.Column="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0 0 20 0"
                      ItemsSource="{Binding ObjectsView}"
                      SelectedItem="{Binding SelectedObject, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Object Name" 
                                        Binding="{Binding ObjectName}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Object Size" 
                                        Binding="{Binding ObjectSize}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Buttons Grid -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Content="Upload" 
                        Grid.Row="0"
                        Margin="5"
                        Height="40"
                        Width="150"/>

                <Button Content="Download" 
                        Grid.Row="1"
                        Margin="5"
                        Height="40"
                        Width="150"/>

                <Button Content="Delete" 
                        Grid.Row="2"
                        Margin="5"
                        Height="40"
                        Width="150"
                        IsEnabled="{Binding CanDeleteObject}"
                        Command="{Binding DeleteObjectCommand}"/>

                <Button Content="Back to Main Window" 
                        Grid.Row="3"
                        Margin="5"
                        Height="40"
                        Width="150"
                        Command="{Binding BackToMainWindowCommand}"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
